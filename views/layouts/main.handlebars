            $.ajax("/api/TBD-DISLIKE", {
              type: "POST",
              data: toBackEnd,
              // sending the genre to the back so we can add "1" to the (genre)Dislike
            }).then(function () {
              console.log("trigger to next")
              $("#carouselExampleCaptions").carousel("next");
              Songs();
