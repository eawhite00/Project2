            $('.dislikeButton').attr("style", "opacity: 0");
            $('#whatButton').attr("style", "opacity: 0");

            $('.likeButton').attr("style", "opacity: 1");
            $('.dislikeButton').attr("style", "opacity: 1");
            $('#whatButton').attr("style", "opacity: 1");

